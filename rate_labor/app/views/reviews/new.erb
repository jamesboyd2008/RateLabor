<style>
  body {
    background-color: #ccffff;
  }
</style>

<div class="container">
  <div class="card-panel z-depth-4">
    <%= form_for :review, url: reviews_path do |f| %>
      <p>
        <%= f.label :company %><br>
        <%= f.text_field :company %>
      </p>

      <p>
        <%= f.label :content %><br>
        <%= f.text_area :content %>
      </p>

      <p>
        <%= f.submit %>
      </p>
    <% end %>
  </div>
</div>

<div class="container">
  <div class="card-panel z-depth-4">
    <a http="#">Request to be contacted</a>
  </div>
</div>
